doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    .container
      h1= title
      p
        a(href="/") Return to the homepage
      if error
        p.notice.error #{error}
      if fields && fields.length
        form(method="POST", action="/update-cobj")
          .form-row
            each f in fields
              .col
                label(for=f)= f
                input(type="text", name=f, id=f, required=(f === 'name'))
          p
            button.btn(type="submit") Create record
      else
        p.notice Could not load fields. Please check your configuration.
